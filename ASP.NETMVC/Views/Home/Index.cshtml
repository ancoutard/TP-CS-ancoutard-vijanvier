@model ASP.NETMVC.Models.ListeOffres
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <ul>
        @using (Html.BeginForm("IndexSearch", "Home", FormMethod.Post))
        {
            <input id="search" type="text" name="searchTerm">
            <input type="submit" value="Rechercher" />
        }
        @foreach (var item in Model.Offres)
        {
            <li>
                @Html.DisplayFor(offre => item.Intitule)
                <br />
                @Html.DisplayFor(offre => item.Statut.Libelle)
                <br />
                @Html.DisplayFor(offre => item.Salaire)
                <br />
                @Html.DisplayFor(offre => item.Responsable)
                <br />

                <a href="@Url.Action("Index", "Detail", new {id = item.Id })">Détails</a> |
                <a href="@Url.Action("Index", "Edit", new {id = item.Id })">Modifier</a>
            </li>
            <br />
        }
    </ul>


</div>

